# Supabase Configuration
SUPABASE_URL=url
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=key

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
DEBUG=False

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Database Configuration (if using additional database)
DATABASE_URL=postgresql://user:password@localhost:5432/inkbook

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Storage Configuration (for portfolio images)
STORAGE_BUCKET=inkbook-portfolio
STORAGE_REGION=us-west-1

# Optional: Test Configuration
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

ENVIRONMENT=development
